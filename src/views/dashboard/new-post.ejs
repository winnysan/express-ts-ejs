<h1><%= global.dictionary.navigation.newPost %></h1>

<section>
  <form id="form" action="/dashboard/new-post" enctype="multipart/form-data" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <div>
      <label for="title"><%= global.dictionary.form.title %></label>
      <input type="text" name="title" <% if (typeof fill !== 'undefined') { %> value="<%= fill.postTitle %>" <% } %> />
    </div>
    <div>
      <label for="body"><%= global.dictionary.form.body %></label>
      <textarea type="text" name="body"><% if (typeof fill !== 'undefined') { %><%= fill.postBody %><% } %></textarea>
    </div>
    <div>
      <label for="images"><%= global.dictionary.form.images %></label>
      <input id="input-images" type="file" name="images" multiple />
      <div id="preview-images"></div>
    </div>
    <button type="submit"><%= global.dictionary.form.addNewPost %></button>
  </form>
</section>
