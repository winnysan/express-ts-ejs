<%- include('../partials/header.ejs') %>

<main class="container" data-title="<%= title %>">
  <section class="section--full">
    <h2 class="title" data-name="<%= global.dictionary.navigation.newPost %>">
      <%= global.dictionary.navigation.newPost %>
    </h2>

    <form id="form" action="/new-post" enctype="multipart/form-data" method="post" data-form="editor" class="post-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <div>
        <label for="title"><%= global.dictionary.form.title %></label>
        <input type="text" name="title" />
      </div>
      <div>
        <label for="body"><%= global.dictionary.form.body %></label>
        <textarea name="body"></textarea>
      </div>
      <div>
        <label for="categories">Categories</label>
        <div id="categories-multi-select">
          <div class="selected-categories" id="selected-categories"></div>
          <input type="text" id="category-input" placeholder="Vyberte kategÃ³rie..." autocomplete="off" />
          <div class="dropdown" id="category-dropdown">
            <% categories.forEach(category => { %>
              <div class="dropdown-item" data-id="<%= category._id %>"><%= category.name %></div>
            <% }) %>
          </div>
        </div>
      </div>      
      <button type="submit"><%= global.dictionary.form.addNewPost %></button>
    </form>
  </section>
</main>

