<h1><%= global.dictionary.navigation.login %></h1>

<section>
  <% if (typeof alert !== 'undefined') { %> <% alert.forEach(error => { %>
  <div style="color: red"><%= error.msg %></div>
  <% }) %> <% } %>

  <form action="/login" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <div>
      <label for="email"><%= global.dictionary.form.email %></label>
      <input type="email" name="email" <% if (typeof fill !== 'undefined') { %> value="<%= fill.email %>" <% } %> />
    </div>
    <div>
      <label for="password"><%= global.dictionary.form.password %></label>
      <input type="password" name="password" />
    </div>
    <button type="submit"><%= global.dictionary.form.login %></button>
  </form>
</section>
