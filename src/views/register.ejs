<h1><%= global.dictionary.navigation.register %></h1>

<section>
  <% if (typeof alert !== 'undefined') { %> <% alert.forEach(error => { %>
  <div style="color: red"><%= error.msg %></div>
  <% }) %> <% } %>

  <form action="/register" method="post">
    <div>
      <label for="email"><%= global.dictionary.form.email %></label>
      <input type="email" name="email" <% if (typeof fill !== 'undefined') { %>
      value="<%= fill.email %>" <% } %> />
    </div>
    <div>
      <label for="name"><%= global.dictionary.form.name %></label>
      <input type="text" name="name" <% if (typeof fill !== 'undefined') { %>
      value="<%= fill.name %>" <% } %> />
    </div>
    <div>
      <label for="password"><%= global.dictionary.form.password %></label>
      <input type="password" name="password" />
    </div>
    <div>
      <label for="confirmPassword"
        ><%= global.dictionary.form.confirmPassword %></label
      >
      <input type="password" name="confirmPassword" />
    </div>
    <button type="submit"><%= global.dictionary.form.register %></button>
  </form>
</section>
